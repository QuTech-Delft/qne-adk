{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "file:experiment.json",
  "title": "Experiment",
  "description": "Experiment consisting of an asset and meta",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "backend": {
          "type": "object",
          "properties": {
            "location": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "experiment_id": {
              "type": "integer"
            }
          },
          "required": [
            "location",
            "type"
          ]
        },
        "number_of_rounds": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "backend",
        "number_of_rounds",
        "description"
      ]
    },
    "asset": {
      "$ref": "file:asset.json"
    },
    "experiment": {
      "type": "string",
      "format": "uri-reference"
    }
  },
  "required": [
      "meta",
      "asset"
  ],
  "additionalProperties": false
}
